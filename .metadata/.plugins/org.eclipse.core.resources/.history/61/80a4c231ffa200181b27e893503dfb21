package com.kishore.anant.messenger.service;

import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import com.kishore.anant.messenger.entity.Comment;

/**
 * @author i351596
 *
 */
public class MessageService {
	
	/**
	 * 
	 */
	public MessageService() {
	}
	
	public List<Comment> getAllMessages() {
		
		
		Comment m1 = new Comment(1, "One", new Date(), "Anant");
		Comment m2 = new Comment(2, "Two", new Date(), "Kishore");
		
		List<Comment> messages = new ArrayList<>();
		
		messages.add(m1);
		messages.add(m2);
		
		return messages;
		
	}

}
