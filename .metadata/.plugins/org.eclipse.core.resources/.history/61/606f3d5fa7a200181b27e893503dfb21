package com.kishore.anant.hackerrank;

/**
 * @author i351596
 *
 */
public class MinimumSwaps {

	private static int count = 0;

	/**
	 * 
	 */
	public MinimumSwaps() {
		// TODO Auto-generated constructor stub
	}

	/**
	 * @param args
	 */
	public static void main(String[] args) {

		int[] arr = { 4, 3, 1, 2 };

		findMinimumSwaps(arr, 0, arr.length - 1);

		System.out.println(count);
	}

	private static void findMinimumSwaps(int[] arr, int i, int j) {

		for (int j2 = 0; j2 < arr.length - 1; j2++) {

			for (int k = j2 + 1; k < arr.length; k++) {
				int j = arr[k];

			}
		}
	}

	private void swap(int[] arr, int i, int j) {
		int temp = arr[i];
		arr[i] = arr[j];
		arr[j] = temp;
		if (i != j)
			count++;
	}

}
