 * 
 */
package com.kishore.anant.messenger.resource;

import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;

import com.kishore.anant.messenger.entity.Comment;
import com.kishore.anant.messenger.entity.Wine;
import com.kishore.anant.messenger.exception.DaoException;
import com.kishore.anant.messenger.service.CommentService;

/**
 * @author i351596
 *
 */
public class CommentResource {

	private CommentService commentService = new CommentService();
	
	public CommentResource()
	{
		
	}
	
	@GET
	@Path("comments")
	public String getTest2(@PathParam("wineId") long wineId)
	{
		return "test";
	}
	
	@GET
	@Path("comments/{commentId}")
	public String getTest2(@PathParam("wineId") String wineId, @PathParam("commentId") String commentId)
	{
		return commentService.getComment(wineId, commentId);
	}
	
	@POST
	@Path("comments")
	public Wine getTest2(@PathParam("wineId") String wineId, Comment comment)
	{
		try {
			return commentService.createComment(wineId, comment);
		} catch (DaoException e) {
			e.printStackTrace();
		}
		return null;
		
	}
}
